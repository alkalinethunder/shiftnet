{
  "meta": {
    "name": "ShiftOS",
    "description": "The default look and feel of ShiftOS.",
    "author": "Developer X",
    "engine": "Shiftnet.Skinning.CyberpunkSkinEngine"
  },
  "colors": {
    "light": {
      "container": "#101010",
      "text.primary": "#f71b1b",
      "text.secondary": "cyan",
      "text.tertiary": "gray",
      "text.highlight": "white",
    },
    "dark": {
      "container": "#101010",
      "text.primary": "#f71b1b",
      "text.secondary": "cyan",
      "text.tertiary": "gray",
      "text.highlight": "white"
    }
